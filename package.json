{
    "name": "gamecred-api",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=12.0.0"
    },
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:prod": "node dist/main.js",
        "migration:create": "ts-node node_modules/typeorm/cli.js migration:create -f ormconfig -d src/migrations -n",
        "migration:generate": "ts-node node_modules/typeorm/cli.js migration:generate -f ormconfig -d src/migrations -n",
        "migration:revert": "ts-node node_modules/typeorm/cli.js migration:revert -f ormconfig",
        "schema:drop": "ts-node node_modules/typeorm/cli.js schema:drop -f ormconfig",
        "watch:dev": "nodemon --config nodemon.json",
        "debug:dev": "nodemon --config nodemon-debug.json",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nest-modules/mailer": "^1.1.3",
        "@nestjs/common": "^6.0.0",
        "@nestjs/core": "^6.0.0",
        "@nestjs/jwt": "^6.1.1",
        "@nestjs/passport": "^6.1.0",
        "@nestjs/platform-express": "^6.0.0",
        "@nestjs/swagger": "^3.1.0",
        "@nestjs/typeorm": "^6.1.3",
        "bcrypt": "^5.0.0",
        "chance": "^1.1.0",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.10.0",
        "dotenv": "^8.1.0",
        "lodash": "^4.17.15",
        "morgan": "^1.9.1",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "pg": "^7.12.1",
        "reflect-metadata": "^0.1.12",
        "rimraf": "^2.6.2",
        "rxjs": "^6.3.3",
        "swagger-ui-express": "^4.1.1",
        "typeorm": "^0.2.19",
        "typeorm-transactional-cls-hooked": "^0.1.8"
    },
    "devDependencies": {
        "@nestjs/testing": "^6.0.0",
        "@types/bcrypt": "^3.0.0",
        "@types/chance": "^1.0.6",
        "@types/dotenv": "^6.1.1",
        "@types/express": "4.16.1",
        "@types/jest": "24.0.11",
        "@types/lodash": "^4.14.138",
        "@types/morgan": "^1.7.37",
        "@types/node": "11.13.4",
        "@types/passport-jwt": "^3.0.2",
        "@types/supertest": "2.0.7",
        "jest": "24.7.1",
        "nodemon": "^1.19.2",
        "prettier": "1.17.0",
        "supertest": "4.0.2",
        "ts-jest": "24.0.2",
        "ts-node": "8.1.0",
        "tsc-watch": "2.2.1",
        "tsconfig-paths": "3.8.0",
        "tslint": "5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-consistent-codestyle": "^1.15.1",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "3.4.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
